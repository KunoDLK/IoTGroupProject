@model List<Bindicator.ViewModels.BinStatusViewModel>

@{
    ViewData["Title"] = "Bin Dashboard";
}

<style>
    th {
        cursor: pointer;
    }
</style>

<h2>Bin Dashboard</h2>

<input type="text" id="binFilter" class="form-control mb-3" placeholder="Search by street or postcode" />

<script>
    document.addEventListener('DOMContentLoaded', function () {
        document.getElementById('binFilter').addEventListener('keyup', function () {
            var filter = this.value.toLowerCase();
            document.querySelectorAll("table tbody tr").forEach(function (row) {
                var text = row.innerText.toLowerCase();
                row.style.display = text.includes(filter) ? '' : 'none';
            });
        });
    });
</script>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Postcode</th>
            <th>Street</th>
            <th>Bin #</th>
            <th>Fill Level (%)</th>
            <th>Weight (kg)</th>
            <th>Density</th>
            <th>Last Updated</th>
            <th>Trend</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var bin in Model)
        {
            var fillClass = bin.FillLevel switch
            {
                >= 85 => "table-danger",     // Red
                >= 60 => "table-warning",    // Orange
                > 0 => "table-success",      // Green
                _ => ""
            };

            <tr class="@fillClass">
                <td>@bin.Postcode</td>
                <td>@bin.Street</td>
                <td>@bin.BinNumber</td>
                <td>@bin.FillLevel</td>
                <td>@bin.Weight</td>
                <td>@bin.Density</td>
                <td>
                    @bin.Timestamp.ToLocalTime().ToString("g")
                    <br />
                    <small class="text-muted">
                        (@((DateTime.UtcNow - bin.Timestamp).TotalMinutes.ToString("N0")) mins ago)
                    </small>
                </td>
                <td>
                    <a asp-controller="Dashboard" asp-action="Trend"
                       asp-route-postcode="@bin.Postcode"
                       asp-route-street="@bin.Street"
                       asp-route-binNumber="@bin.BinNumber">
                        View Trend
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>